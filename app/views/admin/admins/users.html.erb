<div class = " container">  <Strong>User list</Strong>
  <table class="table">
    <thead>
      <tr>
        <% number = 0 %>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Role</th>
        <th scope="col">View</th>
        <th scope="col">Disable/enable</th>
      </tr>
    </thead>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= number = number.next %></th>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'View User', user_path(user) %></td>
        <td><%= form_with url: disable_user_admin_path, method: :patch do |form| %>
            <%= form.hidden_field :user_id, value: user.id %>
            <% if user.disabled_at? %>
              <%= form.submit "Enable User", class: "mt-2 btn btn-primary" %>
            <% else %>
              <%= form.submit "Disable User",name: 'disabled', class: "mt-2 btn btn-primary" %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
